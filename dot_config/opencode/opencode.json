{
  "$schema": "https://opencode.ai/config.json",
  "theme": "ayu",
  "autoupdate": true,
  "model": "opencode/gpt-5-codex",
  "tui": {
    "scroll_speed": 3
  },
  "tools": {
    "edit": true,
    "bash": true,
    "write": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true
  },
  "provider": {
    "openai": {
      "models": {
        "gpt-5": {
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        }
      }
    }
  }
}
