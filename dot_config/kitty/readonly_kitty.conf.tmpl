# Shell integration is sourced and configured manually
shell_integration enabled
{{ if eq "darwin" .chezmoi.os }}
notify_on_cmd_finish unfocused 10.0 command /opt/homebrew/bin/terminal-notifier -title 'Kitty' -appIcon file:///Users/annieehler/.config/kitty/kitty.png -execute open focus://focus -message "A command has finished executing"
{{ else if eq "linux" .chezmoi.os }}
notify_on_cmd_finish unfocused 10.0 command notify-send "Kitty" "A command has finished executing"
{{ end }}

# Background
background_opacity 0.9
dynamic_background_opacity yes
background_blur 20
active_tab_font_style bold
adjust_line_height 110%
allow_remote_control yes

# Colors
include dracula.conf
listen_on unix:/tmp/mykitty
tab_bar_edge top
tab_bar_style powerline
tab_title_template Tab {index}: {title}
window_padding_width 10

# OS specific settings
{{ if eq "darwin" .chezmoi.os }}
macos_titlebar_color background
macos_quit_when_last_window_closed yes
macos_window_resizable yes
{{ else if eq "linux" .chezmoi.os }}
linux_display_server wayland
wayland_titlebar_color background
{{ end }}

# Fonts 
font_family JetBrainsMono Nerd Font Mono
bold_font JetBrainsMono Nerd Font Mono Bold
italic_font JetBrainsMono Nerd Font Mono Italic
bold_italic_font JetBrainsMono Nerd Font Mono Bold Italic
font_size 12.0

# Glyphs
disable_ligatures never
symbol_map U+E5FA-U+E6AC,U+E700-U+E7C5,U+F000-U+F2E0,U+E200-U+E2A9,U+F0001-U+F1AF0,U+E300-U+E3E3,U+F400-U+F532,U+2665,U+26A1,U+E0A0-U+E0A2,U+E0B0-U+E0B3,U+E0A3,U+E0B4-U+E0C8,U+E0CA,U+E0CC-U+E0D2,U+E0D4,U+23FB-U+23FE,U+2B58,U+F300-U+F32F,U+E000-U+E00A,U+EA60-U+EBEB,U+2500-U+259F JetBrainsMono Nerd Font Mono
tab_activity_symbol ÔÑê

# Ligatures
font_features JetBrainsMonoNFM-Regular +cv14 +ss02 +calt
font_features JetBrainsMonoNFM-Italic +cv14 +ss02 +calt 
font_features JetBrainsMonoNFM-BoldItalic +cv14 +ss02 +calt 
font_features JetBrainsMonoNFM-Italic +cv14 +ss02 +calt


# Keyboard shortcuts
# Switch focus left
map ctrl+left neighboring_window left
# Retile window right
map shift+left move_window right
# Switch focus down
map ctrl+down neighboring_window down
# Retile window up
map shift+down move_window up

# moves the window into a new OS window
map ctrl+f2 detach_window
# moves the window into a new tab
map ctrl+f3 detach_window new-tab
# moves the window into the previously active tab
map ctrl+f3 detach_window tab-prev
# moves the window into the tab at the left of the active tab
map ctrl+f3 detach_window tab-left
# moves the window into a new tab created to the left of the active tab
map ctrl+f3 detach_window new-tab-left
# asks which tab to move the window into
map ctrl+f4 detach_window ask
