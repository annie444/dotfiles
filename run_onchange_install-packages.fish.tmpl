{{ end -}}

log info "=== CARGO CRATES INSTALLED ==="

function run_cmd
    set -l cmd $argv
    log trace "Running command $cmd"
    eval (pipe -s out err -- $cmd)
    if test -n "$err"
        log error $err
    end
    if test -n "$out"
        log info $out
    end
end

