#!/bin/usr/env fish

{{ if eq .chezmoi.os "darwin" -}}
brew tap browsh-org/homebrew-browsh
brew tap homebrew/cask-fonts
brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ else }}
echo "Not setup yet"
{{ end -}}
